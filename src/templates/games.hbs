{{#each games}}
    <li class="item">

        
        {{#if title}} {{!-- Береться з .json файла --}}
        <h2 class="title">{{title}}</h2>
        {{else}}
        <h2 class="title">Невідома назва</h2>
        {{/if}}

        <p class="genre">{{genre}}</p>
        <p class="platform">{{platforms}}</p>
        <p class="desc">{{note}}</p>
        <img src="{{images}}" alt="{{title}}" class="img">
    </li>
{{/each}}
